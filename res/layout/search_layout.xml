<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:padding="5sp">

    <ImageButton
        android:id="@+id/Search_title_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#ff606060"
        android:src="@drawable/search_title" />
    
     <RelativeLayout 
       android:id="@+id/RelateLayout01" 
   	   android:layout_height="fill_parent" 
   	   android:layout_width="fill_parent"
   	   android:background="@color/blue">

    	<ImageButton
        android:id="@+id/Search_camera_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ff606060"
        android:src="@drawable/search_noinfo" />

    	<ListView
    	    android:id="@+id/listData"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"
    	    android:background="@color/blue" >
    	</ListView>
    	
    </RelativeLayout>	

</LinearLayout>