<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <RelativeLayout 
       android:id="@+id/FrameLayout01" 
   	   android:layout_height="fill_parent" 
   	   android:layout_width="fill_parent">
		<FrameLayout 
		   android:layout_width="fill_parent" 
		   android:layout_height="fill_parent" 
		   android:id="@+id/preview"></FrameLayout>
		<com.arc.on_the_road.CameraViewToDraw
		   android:id="@+id/vtd" 
		   android:layout_height="fill_parent" 
		   android:layout_width="fill_parent"></com.arc.on_the_road.CameraViewToDraw>

		<ImageButton
		    android:id="@+id/camera_takepicture"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:background="#88606060"
		    android:scaleType="fitCenter"
		    android:layout_alignParentBottom="true"
		    android:src="@drawable/index_camera" />
		
		<ImageButton
		    android:id="@+id/camera_facebook"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:background="#88606060"
		    android:scaleType="fitCenter"
		    android:layout_above="@+id/camera_takepicture"
		    android:src="@drawable/index_camera" />
		
		<ImageButton
		    android:id="@+id/camera_update"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:background="#88606060"
		    android:scaleType="fitCenter"
		    android:layout_above="@+id/camera_facebook"
		    android:src="@drawable/index_camera" />

	</RelativeLayout>

</LinearLayout>
